@model List<LearnerProject.Models.Entities.About>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<br />
<h3>Hakkımızda Listesi</h3>
@{
    int count = 0;
}
<br />
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Alt Açıklama 1</th>
        <th>Alt Açıklama 2</th>
        <th>Alt Açıklama 3</th>
        <th>İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td><img src="@item.ImageUrl" style="height:50px; width:50px" /></td>
            <td>@item.Title</td>
            <td>@(item.Description.Length>40 ? item.Description.Substring(0,40) : item.Description)</td>
            <td>@(item.Item1.Length>20 ? item.Item1.Substring(0,20) : item.Item1)</td>
            <td>@(item.Item2.Length>20 ? item.Item2.Substring(0,20) : item.Item2)</td>
            <td>@(item.Item3.Length>20 ? item.Item3.Substring(0,20) : item.Item3)</td>
       
            <td>
                <a href="/AdminAbout/DeleteAbout/@item.AboutId" class="btn btn-outline-danger"><i class="fa fa-trash"></i> Sil</a>
                <a href="/AdminAbout/UpdateAbout/@item.AboutId" class="btn btn-outline-info"><i class="fa fa-pen"></i> Güncelle</a>
            </td>
        </tr>
    }
</table>
<br />
<a href="/AdminAbout/AddAbout" class="btn btn-outline-success">Yeni Hakkımızda Bilgisi Ekle</a>


