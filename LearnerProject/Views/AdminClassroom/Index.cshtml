@model List<LearnerProject.Models.Entities.Classroom>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<br />
<h3>Sınıflar Listesi</h3>
@{
    int count = 0;
}
<br />
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Sınıf Adı</th>
        <th>Icon</th>
        <th>Açıklama</th>
        <th>Durum</th>
        <th>İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Name</td>
            <td>@item.Icon</td>
            <td>@(item.Description.Length>50 ? item.Description.Substring(0,50) : item.Description)</td>
            <td>@( item.Status == true ? "Aktif" : "Pasif" )</td>

            <td>
                <a href="/AdminClassroom/UpdateClassroom/@item.ClassroomId" class="btn btn-outline-info"><i class="fa fa-pen"></i> Güncelle</a>
                <span style="margin-right: 10px;"></span>
                <a href="/AdminClassroom/MakeActive/@item.ClassroomId" class="btn btn-outline-warning">Aktif</a>
                <span style="margin-right: 10px;"></span>
                <a href="/AdminClassroom/MakePassive/@item.ClassroomId" class="btn btn-outline-light">Pasif</a>
                <span style="margin-right: 10px;"></span>
                <a href="/AdminClassroom/DeleteClassroom/@item.ClassroomId" class="btn btn-outline-danger"><i class="fa fa-trash"></i> Sınıfı Sil</a>
            </td>

        </tr>
    }
</table>
<br />
<a href="/AdminClassroom/AddClassroom" class="btn btn-outline-success">Yeni Sınıf Ekle</a>



