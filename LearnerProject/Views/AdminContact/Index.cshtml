@model List<LearnerProject.Models.Entities.Contact>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<br />
<h3>İletişim Listesi</h3>
@{
    int count = 0;
}
<br />
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Adres</th>
        <th>Müsait Zaman</th>
        <th>Email</th>
        <th>Telefon</th>
        <th>İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Address</td>
            <td>@item.OpenHours</td>
            <td>@item.Email</td>
            <td>@item.Phone</td>

            <td>
                <a href="/AdminContact/UpdateContact/@item.ContactId" class="btn btn-outline-info"><i class="fa fa-pen"></i> Güncelle</a>
                <span style="margin-right: 10px;"></span>
     
                <a href="/AdminContact/DeleteContact/@item.ContactId" class="btn btn-outline-danger"><i class="fa fa-trash"></i> Sil</a>
            </td>

        </tr>
    }
</table>
<br />
<a href="/AdminContact/AddContact" class="btn btn-outline-success">Yeni İletişim Bilgisi Ekle</a>

