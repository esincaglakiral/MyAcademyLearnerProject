@model LearnerProject.Models.Entities.FAQ

@{
    ViewBag.Title = "AddFaq";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<br />
<h2>Sık Sorulan Ekleme Formu</h2>

<form method="post">
    <label>Resim Url</label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control", @placeholder = "Lütfen geçerli bir resim url giriniz" })
    <br />
    <label>Soru</label>
    @Html.TextBoxFor(x => x.Question, new { @class = "form-control", @placeholder = "Lütfen geçerli metin giriniz" })
    <br />
    <label>Açıklama</label>
    @Html.TextAreaFor(x => x.Answer, 5, 1, new { @class = "form-control", @placeholder = "Lütfen geçerli bir cevap giriniz" })
    <br />

    <button class="btn btn-outline-primary"><i class="fas fa-save"></i>Kaydet</button>
</form>

