@model List<LearnerProject.Models.Entities.Admin>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<br />
<h3>Profilim</h3>
@{
    int count = 0;
}
<br />
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>Ad Soyad</th>
        <th>Kullanıcı Adı</th>
        <th>Şifre</th>
        <th>İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td><img src="@item.ImageUrl" style="height:50px; width:50px" /></td>
            <td>@item.NameSurname</td>
            <td>@item.UserName</td>
            <td>@item.Password</td>


            <td>
                <a href="/AdminProfile/UpdateProfile/@item.AdminId" class="btn btn-outline-info"><i class="fa fa-pen"></i> Güncelle</a>
                <span style="margin-right: 10px;"></span>
                <a href="/AdminProfile/DeleteProfile/@item.AdminId" class="btn btn-outline-danger"><i class="fa fa-trash"></i> Profili Sil</a>
            </td>

        </tr>
    }
</table>
<br />
<a href="/AdminProfile/AddProfile" class="btn btn-outline-success">Yeni Profil Ekle</a>

