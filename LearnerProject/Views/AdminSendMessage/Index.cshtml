@model List<LearnerProject.Models.Entities.Message>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<br />
<h3>Gelen Mesajlar Listesi</h3>
@{
    int count = 0;
}
<br />
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Email</th>
        <th>Mesaj Konusu</th>
        <th>Mesaj İçeriği</th>
        <th>Tarih</th>
        <th>Durum</th>
        <th>İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.NameSurname</td>
            <td>@item.Email</td>
            <td>@item.Subject</td>
            <td>@(item.MessageContent.Length > 50 ? item.MessageContent.Substring(0, 50) : item.MessageContent)</td>
            <td>@(item.IsRead == true ? "Okunmadı" : "Okundu")</td>

            <td>
                <button class="btn btn-outline-info" onclick="window.location.href='/AdminSendMessage/MessageDetail/@item.MessageId'">Mesaj Detayı</button>
                <span style="margin-right: 10px;"></span>
                <a href="/AdminSendMessage/IsNotRead/@item.MessageId" class="btn btn-outline-warning">Okunmadı</a>
                @*<span style="margin-right: 10px;"></span>
                <a href="/AdminSendMessage/IsRead/@item.MessageId" class="btn btn-outline-light">Okundu olarak işaretle</a>*@
                <span style="margin-right: 10px;"></span>
                <a href="/AdminSendMessage/DeleteSendMessage/@item.MessageId" class="btn btn-outline-danger"><i class="fa fa-trash"></i> Mesajı Sil</a>
            </td>

        </tr>
    }
</table>

