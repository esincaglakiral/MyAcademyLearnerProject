@model LearnerProject.Models.Entities.Message


<div class="col-lg-7 mr-auto order-1" data-aos="fade-up" data-aos-delay="200">
    <form action="@Url.Action("SendMessage", "Contact")" method="post">
        <div class="row">
            <div class="col-6 mb-3">
                @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control", @placeholder = "Adınız Soyadınız" })
                @*<input type="text" name="NameSurname" class="form-control" placeholder="Adınız Soyadınız">*@
            </div>
            <div class="col-6 mb-3">
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "Email Adresiniz" })

                @*<input type="email" name="Email" class="form-control" placeholder="Email Adresiniz">*@
            </div>
            <div class="col-12 mb-3">
                @Html.TextBoxFor(x => x.Subject, new { @class = "form-control", @placeholder = "Mesaj Konusu" })

                @*<input type="text" name="Subject" class="form-control" placeholder="Mesaj Konusu">*@
            </div>
            <div class="col-12 mb-3">
                @Html.TextAreaFor(x => x.MessageContent, new { @cols = "30", @rows = "7", @class = "form-control", @placeholder = "Mesaj İçeriği" })

                @*<textarea name="MessageContent" cols="30" rows="7" class="form-control" placeholder="Mesaj İçeriği"></textarea>*@
            </div>

            <div class="col-12">
                <input type="submit" value="Mesajı Gönder" class="btn btn-primary">
            </div>
        </div>
    </form>
</div>
