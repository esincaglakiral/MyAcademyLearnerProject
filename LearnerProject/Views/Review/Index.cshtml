@model IPagedList<LearnerProject.Models.Entities.Review>
@using PagedList;
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<h3 class="mt-3">Yorumlar/Puanlar Listesi</h3>
<br />
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Kurs Adı</th>
            <th>İnceleme Değeri</th>
            <th>Yorum</th>
            <th>Öğrenci Adı</th>
            <th>Öğrenci Kullanıcı Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th>@count</th>
                <td>@item.Course.CourseName</td>
                <td>@item.ReviewValue</td>
                <td>@(item.Comment.Length>60 ? item.Comment.Substring(0,60) + "..." : item.Comment )</td>
                <td>@item.Student.NameSurname</td>
                <td>@item.Student.UserName</td>
                <td>
                    <a href="/Review/DeleteReview/@item.ReviewId" class="btn btn-outline-danger" style="margin-right:15px"><i class="fa fa-trash"></i>Sil</a>
                    <a href="/Review/UpdateReview/@item.ReviewId" class="btn btn-outline-warning"> <i class="fa fa-edit"></i>Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Review/AddReview/" class="btn btn-success" style="float:right"><i class="fa fa-plus m-2"></i>Yorum Ekle</a>
<br />
@Html.PagedListPager((IPagedList)Model, pageNumber => Url.Action("Index", new { pageNumber }), new PagedListRenderOptions
  {
      LiElementClasses = new List<string>
      {
          "page-link",

      }
  })