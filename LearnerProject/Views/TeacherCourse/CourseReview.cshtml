@model List<LearnerProject.Models.Entities.Review>

@{
    ViewBag.Title = "CourseReview";
    Layout = "~/Views/TeacherLayout/Index.cshtml";
    int count = 0;

}

<h3 class="mt-3">Kurslarıma Yapılan Yorumlar/Puanlar Listesi</h3>
<br />
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Kurs Adı</th>
            <th>İnceleme Değeri</th>
            <th>Yorum</th>
            <th>Öğrenci Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th>@count</th>
                <td>@item.Course.CourseName</td>
                <td>@item.ReviewValue</td>
                <td>@(item.Comment.Length>60 ? item.Comment.Substring(0,60) + "..." : item.Comment )</td>
                <td>@item.Student.NameSurname</td>
                <td>
                    <a href="/TeacherCourse/DeleteTeacherCourseReview/@item.ReviewId" class="btn btn-outline-danger" style="margin-right:15px"><i class="fa fa-trash"></i>Sil</a>
                    <a href="/TeacherCourse/UpdateTeacherCourseReview/@item.ReviewId" class="btn btn-outline-warning"> <i class="fa fa-edit"></i>Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />

