﻿@model List<LearnerProject.Models.Entities.CourseVideo>

@{
    ViewBag.Title = "CourseVideo";
    Layout = "~/Views/TeacherLayout/Index.cshtml";
    int count = 0;
}

<h3 class="mt-3">Kurslar</h3>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Kurs Adı</th>
            <th>Video URL</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th>@count</th>
                <td>@item.Course.CourseName </td>
                <td>@item.VideoUrl</td>
                <td>
                    <a href="/TeacherCourse/DeleteCourseVideo/@item.CourseVideoId" class="btn btn-outline-danger"><i class="fa fa-trash"></i>Sil</a>
                    <a href="/TeacherCourse/UpdateCourseVideo/@item.CourseVideoId" class="btn btn-outline-info"><i class="fa fa-pen"></i>Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/TeacherCourse/AddCourseVideo/" class="btn btn-outline-success"><i class="fa fa-plus m-2"></i>Kurs Video Ekle</a>

