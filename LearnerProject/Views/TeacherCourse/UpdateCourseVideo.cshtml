﻿@model LearnerProject.Models.Entities.CourseVideo

@{
    ViewBag.Title = "UpdateCourseVideo";
    Layout = "~/Views/TeacherLayout/Index.cshtml";
}

<h2>Kurs Videosu Güncelle</h2>

<form method="post">
    @Html.TextBoxFor(x => x.CourseVideoId, new { @class = "form-control mb-3", @placeholder = "Kurs Video ID", style = "display: none;" })
    <br />
    <label>Kurs ID</label>
    @Html.TextBoxFor(x => x.CourseId, new { @class = "form-control mb-3", @placeholder = "Course Id" })
    <br />
    <label>Video Numarası</label>
    @Html.TextBoxFor(x => x.VideoNumber, new { @class = "form-control mb-3", @placeholder = "Video Numarası" })
    <br />
    <label>Video Url</label>
    @Html.TextBoxFor(x => x.VideoUrl, new { @class = "form-control mb-3", @placeholder = "Video URL" })
    <br />
    <label>Eğitmen Id</label>
    @Html.TextBoxFor(x => x.TeacherId, new { @class = "form-control mb-3", @placeholder = "Eğitmen Id" })
    <button class="btn btn-outline-primary"><i class="fas fa-save"> Kaydet</i></button>
</form>

